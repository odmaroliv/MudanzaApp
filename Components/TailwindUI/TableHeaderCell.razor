@namespace MudanzaApp.Components.TailwindUI

<th scope="col" class="@GetHeaderCellClasses()">
    @ChildContent
</th>

@code {
    [Parameter] public RenderFragment ChildContent { get; set; }

    [Parameter] public bool IsBordered { get; set; }

    [Parameter] public string Align { get; set; } = "left";

    [Parameter] public bool IsCompact { get; set; }

    [Parameter] public string Width { get; set; }

    private string GetHeaderCellClasses()
    {
        var classes = new List<string>();

        // Base classes
        classes.Add("font-semibold text-gray-900 dark:text-white");

        // Padding based on compact mode
        if (IsCompact)
        {
            classes.Add("px-3 py-2 text-xs");
        }
        else
        {
            classes.Add("px-4 py-3 text-sm");
        }

        // Text alignment
        switch (Align.ToLower())
        {
            case "center":
                classes.Add("text-center");
                break;
            case "right":
                classes.Add("text-right");
                break;
            default:
                classes.Add("text-left");
                break;
        }

        // Border
        if (IsBordered)
        {
            classes.Add("border border-gray-200 dark:border-gray-700");
        }

        // Width
        if (!string.IsNullOrEmpty(Width))
        {
            classes.Add(Width);
        }

        return string.Join(" ", classes);
    }
}
