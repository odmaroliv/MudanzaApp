@* MudanzaApp/Pages/Error.cshtml *@
@page
@model MudanzaApp.Pages.ErrorModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Error - @Model.AppName</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <link href="css/site.css" rel="stylesheet" />
    <style>
        .error-container {
            text-align: center;
            padding: 40px 15px;
        }

        .error-code {
            font-size: 150px;
            font-weight: bold;
            color: #dc3545;
            margin-bottom: 0;
            line-height: 1;
        }

        .error-message {
            font-size: 24px;
            margin-bottom: 30px;
        }

        .error-details {
            color: #6c757d;
            margin-bottom: 30px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="error-container">
                    <h1 class="error-code">@Model.StatusCode</h1>
                    <h2 class="error-message">@Model.ErrorMessage</h2>

                    @if (Model.ShowDetails && !string.IsNullOrEmpty(Model.ErrorDetails))
                    {
                        <div class="error-details">
                            <p>@Model.ErrorDetails</p>
                        </div>
                    }

                    <div class="mt-4">
                        <a href="/" class="btn btn-primary">
                            <i class="fas fa-home"></i> Back to Home
                        </a>
                        @if (!string.IsNullOrEmpty(Model.RequestId))
                        {
                            <p class="mt-3">
                                <small>Request ID: @Model.RequestId</small>
                            </p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

